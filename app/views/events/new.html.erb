<div class="row container">
 	<h3><strong>Add an Event</strong></h3>
	<form class="col s6" action='/events' method='post'>
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<input type="hidden" name="event[user_id]" value="<%= session[:user_id] %>">
		<p>
			Name: 
			<input type="text" name="event[name]">
		</p>
		<p>
			Date: 
			<input type="date" class="datepicker" name="event[date]">
		</p>
		<p>
			Location:
			<input type="text" name="event[city]">
			<select name="event[state]">
				<% us_states.each do |state| %>
					<option value='<%= state %>'> <%= state %> </option>
				<% end %>
			</select>
		</p>
			<input class="btn waves-effect waves-light indigo accent-1" type="submit" value="Add Event">
	</form>
 </div>